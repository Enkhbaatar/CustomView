<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.enkhee.javacustomview.views.CustomView
        android:id="@+id/CustomView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:square_color="@color/squareColor"
        app:square_size="@dimen/square_size"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/changeColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change color"
        app:layout_constraintTop_toBottomOf="@id/CustomView"
        app:layout_constraintLeft_toLeftOf="@id/CustomView"
        app:layout_constraintRight_toRightOf="@id/CustomView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:onClick="changeColor"/>
</android.support.constraint.ConstraintLayout>